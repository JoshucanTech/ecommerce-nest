model Vendor {
  id              String            @id @default(uuid())
  userId          String            @unique
  businessName    String
  businessEmail   String            @unique
  businessPhone   String
  businessAddress VendorAddress[]
  businessLogo    String?
  description     String?
  isVerified      Boolean           @default(false)
  rating          Float             @default(0)
  totalRatings    Int               @default(0)
  commissionRate  Float             @default(10)
  slug            String            @unique
  status          ApplicationStatus @default(PENDING)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  coupons         Coupon[]
  flashSales      FlashSale[]
  inventory       Inventory[]
  orders          Order[]           @relation("VendorOrders")
  products        Product[]
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  advertisements  Advertisement[]
  coverImage      String?
  website         String?
  socialMedia     Json? // Store social media links as JSON
  isActive        Boolean           @default(true)
  balance         Float             @default(0)
  bankInfo        Json? // Store bank information as JSON

  @@map("vendors")
}

model VendorApplication {
  id              String            @id @default(uuid())
  userId          String            @unique
  businessName    String
  businessEmail   String            @unique
  businessPhone   String
  businessAddress VendorAddress[]
  businessLogo    String?
  description     String?
  status          ApplicationStatus @default(PENDING)
  notes           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  website    String?
  documents  Json? // Store document URLs as JSON
  reviewedBy String?
  reviewedAt DateTime?
  User       User[]

  @@map("vendor_applications")
}

model VendorAddress {
  id                  String             @id @default(uuid())
  street              String
  city                String
  state               String
  postalCode          String
  country             String
  isDefault           Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  Vendor              Vendor?            @relation(fields: [vendorId], references: [id])
  vendorId            String?
  VendorApplication   VendorApplication? @relation(fields: [vendorApplicationId], references: [id])
  vendorApplicationId String?

  @@map("vendor_addresses")
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}
